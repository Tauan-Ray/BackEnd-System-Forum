generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  ID_USER  String   @id @default(uuid())
  USERNAME String   @unique
  NAME     String
  EMAIL    String   @unique
  PASSWORD String
  ROLE     UserRole @default(USER)
  DT_CR    DateTime @default(now())
  DT_UP    DateTime @updatedAt

  @@map("USER")
}
